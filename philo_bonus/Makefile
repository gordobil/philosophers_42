NAME				=	philo_bonus

CC					=	gcc
CC_FLAGS			=	-Wall -Wextra -Werror

SOURCES				=	philo_bonus.c \
						init_bonus.c \
						utils_bonus.c \
						end_philo_bonus.c \

OBJECTS				= 	$(SOURCES:%.c=%.o)

INCLUDE				=	philo_bonus.h

define PHILOSOPHERS_BONUS
